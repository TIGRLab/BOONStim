#!/bin/bash


# A test of the full pipeline run using all scripts given a BIDS directory

BOONSTIM=/projects/jjeyachandra/BOONStim/pipeline/
bids=$1
out=$2

nextflow $BOONSTIM/bin/ciftify_meshing.nf -c $BOONSTIM/config/ciftify_meshing.nf.config --bids $bids --out $out
nextflow $BOONSTIM/bin/convert_fs2gifti.nf -c $BOONSTIM/config/convert_fs2gifti.nf.config --out $out
nextflow $BOONSTIM/bin/register_fs2cifti.nf -c $BOONSTIM/config/register_fs2cifti.nf.config --out $out
nextflow $BOONSTIM/bin/prepare_weightfunc_domain.nf -c $BOONSTIM/config/weightfun.nf.config --out $out
nextflow $BOONSTIM/bin/optimize_fem.nf -c $BOONSTIM/optimize_fem.nf.config --out $out
